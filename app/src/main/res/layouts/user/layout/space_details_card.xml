<?xml version="1.0" encoding="utf-8"?>

<!--Used in owner -> Request Location-->
<!--Admin Location -->
<!--Admin Update Location-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="locationRequest"
            type="com.example.sparespark.utils.FirebaseDatabaseOperations" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/information_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_marginHorizontal="40sp"
        android:orientation="vertical"
        app:cardElevation="3dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity=""
            android:orientation="vertical">

            <!--        Tenant Name -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/calibri"
                android:text="Tenant Name" />



            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:backgroundTint="@color/teal_200">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/u_tenant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="05sp"
                    android:fontFamily="@font/gotham"
                    />

            </com.google.android.material.card.MaterialCardView>


            <!--        Phone Number-->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/calibri"
                android:text="Phone Number" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:backgroundTint="@color/teal_200">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/u_phoneno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="05sp"
                    android:fontFamily="@font/gotham"
                     />

            </com.google.android.material.card.MaterialCardView>


            <!--        Selected Time-->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/calibri"
                android:text="Selected Time" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:backgroundTint="@color/teal_200">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/u_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="05sp"
                    android:fontFamily="@font/gotham"

                    />

            </com.google.android.material.card.MaterialCardView>


            <!--        Address-->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/calibri"
                android:text="Address" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="20sp"
                android:backgroundTint="@color/teal_200">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/u_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="05sp"
                    android:fontFamily="@font/gotham"

                     />


                <!--                these buttons will only appear if the role is admin-->
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
